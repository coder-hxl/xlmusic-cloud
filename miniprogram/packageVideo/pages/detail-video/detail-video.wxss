/* pages/detail-video/detail-video.wxss */

page {
  height: 100vh;
}

.video {
  width: 100%;
  height: 424rpx;
}

.scroll {
  height: calc(100% - 430rpx);
}

.scroll .info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 60rpx;
  padding: 0 20rpx;
  height: 100rpx;
}

.info .vname,
.aname {
  /* 显示两行 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.info .vname {
  font-size: 28rpx;
}

.info .aname {
  font-size: 24rpx;
  color: #888;
}

.scroll .related {
  padding: 2rpx 0 40rpx;
  background-color: #fafafa;
}

/* 组件样式 */
.e-video-item {
  display: flex;
  margin: 0 !important;
  padding: 20rpx 0;
  border: 2rpx solid #e0e0e0;
  border-top: 2rpx solid transparent;
  border-radius: none !important;
  box-shadow: none !important;
}

.related .video-item:first-child .e-video-item {
  border-top: 2rpx solid #e0e0e0;
}

.e-video-item .e-album {
  flex: 1;
  margin: 4rpx 10rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.e-video-item .e-content {
  flex: 1.8;
}
