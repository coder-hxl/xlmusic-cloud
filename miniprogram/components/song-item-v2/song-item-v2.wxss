/* components/song-item-item-v2/song-item-item-v2.wxss */
.zebra {
  background-color: #fafafa;
}

.song-item-v2 {
  display: flex;
  align-items: center;
  padding: 26rpx 10rpx;
  border-bottom: 1px solid rgb(235, 235, 235);
}

.order {
  padding: 0 10rpx;
  text-align: center;
  font-size: 30rpx;
}

.love {
  padding: 0 4rpx;
  width: 40rpx;
  height: 0;
}

.song {
  padding-left: 16rpx;
  flex: 1;
}

.name {
  font-size: 32rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.ars {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #666;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.icon {
  width: 40rpx;
  height: 0;
  margin-right: 6rpx;
  margin-top: 2rpx;
}

.division {
  margin: 0 4rpx;
}

.control {
  margin: 0 30rpx;
  font-size: 40rpx;
  color: #3b3b3b;
}
