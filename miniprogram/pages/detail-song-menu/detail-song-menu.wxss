/* pages/detail-song-menu/detail-song-menu.wxss */
.bg-gray {
  background-color: #f5f5f5;
}

.image,
.avatar,
.count-icon {
  height: 0;
}

.cover {
  position: relative;
  padding: 50rpx 40rpx;
  height: 314rpx;
  color: #fff;
  box-shadow: 0 -6rpx 18rpx 2rpx rgba(0, 0, 0, 0.4);
  overflow: hidden;
  z-index: -1;
}

.cover::after {
  content: '';
  position: absolute;
  top: -50rpx;
  bottom: -50rpx;
  left: -50rpx;
  right: -50rpx;
  background: inherit;
  filter: blur(30rpx);
  z-index: -1;
}

.cover .header {
  display: flex;
}

.header .cover-img {
  flex: 1.1;
}

.cover-img .image {
  width: 100%;
  border-radius: 12rpx;
}

.header .detail {
  flex: 2;
  padding-left: 40rpx;
}

.detail .name {
  font-size: 34rpx;
}

.detail .creator {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.detail .creator .avatar {
  width: 44rpx;
  border-radius: 50%;
}

.detail .creator .nickname {
  padding: 10rpx;
  font-size: 26rpx;
}

.detail .description {
  margin-top: 2rpx;
  font-size: 26rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.cover .footer {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0 0;
  font-size: 30rpx;
}

.footer .subscribed-count,
.share-count {
  display: flex;
  align-items: center;
}

.footer .count-icon {
  width: 42rpx;
  margin-right: 6rpx;
}
