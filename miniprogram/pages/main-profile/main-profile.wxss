/* pages/main-profile/main-profile.wxss */
page {
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #f5f5f5;
}

.area {
  border-radius: 12rpx;
  background-color: #fff;
}

.my-music,
.my-song-menu {
  margin-top: 40rpx;
}

.my-music .title,
.my-song-menu .title {
  font-size: 36rpx;
  font-weight: 600;
}

.userInfo {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
}

.userInfo .avatar {
  width: 74rpx;
  height: 0;
  border-radius: 50%;
}

.userInfo .name {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.my-music .list {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  padding: 20rpx 0;
}

.my-music .list .item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.my-music .list .item .icon {
  width: 54rpx;
  height: 0;
}

.my-music .list .item .name {
  margin-top: 10rpx;
  font-size: 26rpx;
}

.my-song-menu .content {
  margin-top: 20rpx;
}

.my-song-menu .content .c-title {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 30rpx;
  font-size: 26rpx;
  color: #727272;
}

.my-song-menu .list {
  padding: 0 40rpx 20rpx 20rpx;
}

.my-song-menu .list .item {
  display: flex;
  margin: 20rpx 0;
  align-items: center;
}

.my-song-menu .list .item .cover {
  width: 80rpx;
  height: 0;
  margin: 0 10rpx;
  border-radius: 12rpx;
}

.my-song-menu .list .item .item-content {
  flex: 1;
  padding-left: 10rpx;
}

.my-song-menu .list .item .item-content .name {
  font-size: 26rpx;
}

.my-song-menu .list .item .item-content .song-sum {
  font-size: 22rpx;
  color: #afafaf;
}

.my-song-menu .list .item .icon {
  font-size: 30rpx;
  color: #9c9c9c;
}

/* =============== 弹出框 =============== */

.dialog .content {
  padding: 50rpx;
}

.dialog .content .ipt {
  margin-top: 40rpx;
  padding-left: 8rpx;
  font-size: 26rpx;
  color: #424242;
  border-bottom: 1px solid rgb(173, 173, 173);
}

.dialog .content .ipt:first-of-type {
  margin-top: 0;
}
